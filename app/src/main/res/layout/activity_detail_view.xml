<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.arnab.android.popularmovies.DetailView">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="40dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/iv_backdrop_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="pin"
                tools:src="@drawable/ic_menu_gallery" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="7dp"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_happy"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="bottom|right" />

    <!-- Your Scrollable View : Can be Nested Scroll View or Recycler View-->
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_error_message_display_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/error_message"
                android:textSize="20sp"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/pb_loading_indicator_detail"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/colorCard"
                    app:cardElevation="4dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/view"
                            android:layout_width="1020dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="43dp"
                            android:layout_marginStart="43dp"
                            android:background="@color/colorBackground"
                            app:layout_constraintBottom_toTopOf="@+id/tv_rating_detail"
                            app:layout_constraintLeft_toLeftOf="@+id/iv_poster_detail"
                            app:layout_constraintTop_toBottomOf="@+id/tv_release_date_detail"
                            app:layout_constraintVertical_bias="1.0" />

                        <ImageView
                            android:id="@+id/iv_poster_detail"
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            tools:src="@drawable/ic_menu_gallery" />

                        <TextView
                            android:id="@+id/tv_title_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="30dp"
                            android:ellipsize="end"
                            android:fontFamily="serif-monospace"
                            android:maxLines="3"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@+id/iv_poster_detail"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            tools:text="Hunger Games MockingJay: Part 1" />

                        <TextView
                            android:id="@+id/tv_release_date_detail"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="serif-monospace"
                            android:textColor="@color/colorTextWhite"
                            android:textSize="17sp"
                            app:layout_constraintLeft_toRightOf="@+id/iv_poster_detail"
                            app:layout_constraintTop_toBottomOf="@+id/tv_title_detail"
                            tools:text="2016" />

                        <TextView
                            android:id="@+id/tv_rating_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:drawableRight="@drawable/star"
                            android:fontFamily="serif-monospace"
                            android:textColor="@color/colorTextGold"
                            android:textSize="20sp"
                            android:textStyle="bold|italic"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/iv_poster_detail"
                            app:layout_constraintVertical_bias="0.0"
                            tools:text="TextView" />

                        <TextView
                            android:id="@+id/tv_voter_count_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="329dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="329dp"
                            android:layout_marginStart="8dp"
                            android:drawableRight="@drawable/ic_people_black_24dp"
                            android:fontFamily="serif-monospace"
                            android:textColor="@color/colorTextGold"
                            android:textSize="20sp"
                            android:textStyle="bold|italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@+id/tv_rating_detail"
                            app:layout_constraintRight_toRightOf="parent"
                            tools:text="TextView" />


                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_genres_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                </android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/colorCard"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_runtime_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif-monospace"
                            android:padding="3dp"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15sp"
                            tools:text="143min" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorBackground" />

                        <TextView
                            android:id="@+id/tv_tagline_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif-monospace"
                            android:padding="3dp"
                            android:textColor="@color/colorTextWhite"
                            android:textSize="15sp"
                            tools:text="Mayhem" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/colorCard"
                    app:cardElevation="4dp">

                    <com.borjabravo.readmoretextview.ReadMoreTextView
                        android:id="@+id/tv_overview_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:padding="4dp"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        app:colorClickableText="@color/colorTextBlack"
                        app:trimCollapsedText="Show Less"
                        app:trimExpandedText="Show More"
                        app:trimLength="200"
                        app:trimMode="trimModeLength" />

                </android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorCard"
    app:cardElevation="4dp">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_trailers_detail">

    </android.support.v7.widget.RecyclerView>
</android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/colorCard"
                    app:cardElevation="4dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/pb_loading_indicator_review"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center"
                            android:visibility="invisible" />
                        <TextView
                            android:id="@+id/tv_error_message_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Something went wrong"
                            android:textColor="@color/colorTextWhite"
                            android:textSize="17sp"
                            android:fontFamily="serif-monospace"
                            android:visibility="invisible"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_reviews_detail"
                            android:layout_width="match_parent"
                            android:layout_height="500dp">

                        </android.support.v7.widget.RecyclerView>
                    </FrameLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorBackground" />
            </LinearLayout>

        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
